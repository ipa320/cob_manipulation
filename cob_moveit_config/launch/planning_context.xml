<launch>
  <!-- By default we do not overwrite the URDF. Change the following to true to change the default behavior -->
  <arg name="load_robot_description" default="false"/>
  <arg name="robot" default="$(optenv ROBOT !!NO_ROBOT_SET!!)"/>
  <arg name="pkg_hardware_config" default="$(find cob_moveit_config)"/>

  <!-- The name of the parameter under which the URDF is loaded -->
  <arg name="robot_description" default="robot_description"/>

  <!-- Load universal robotic description format (URDF) -->
  <include file="$(find cob_hardware_config)/common/upload_robot.launch" if="$(arg load_robot_description)">
    <arg name="robot" value="$(arg robot)" />
    <arg name="pkg_hardware_config" value="$(arg pkg_hardware_config)" />
    <arg name="planning_context" value="true" />
  </include>

</launch>

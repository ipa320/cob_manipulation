<?xml version="1.0"?>
<launch>
  <arg name="load_robot_description" default="false"/>
  <arg name="robot" default="$(env ROBOT)"/>
  <arg name="config_path" default="$(find cob_hardware_config)/$(arg robot)/moveit_config"/>
  
  <!-- Load SRDF -->
  <include file="$(find cob_moveit_config)/launch/planning_context.xml">
    <arg name="load_robot_description" value="$(arg load_robot_description)" />
    <arg name="robot" value="$(arg robot)" />
    <arg name="config_path" value="$(arg config_path)" />
  </include>

  <node pkg="cob_collision_monitor" type="cob_collision_monitor_node" name="cob_collision_monitor_node">
    <!--remap from="/cob_collision_monitor_node/state_is_valid" to="/safety_controller/state_is_valid"/-->  <!--only needed for the cob4 specific configuration-->
  </node>

</launch>

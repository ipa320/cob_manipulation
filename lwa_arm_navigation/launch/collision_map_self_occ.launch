<?xml version="1.0"?>
<launch>
  
  <node machine="pc1" pkg="collision_map" type="collision_map_self_occ_node" name="collision_map_self_occ_node" respawn="true" output="screen">
    
    <remap from="robot_description" to="robot_description" />

    <!-- The default padding to be added for the body parts the robot can see -->
    <param name="self_see_default_padding" type="double" value="0.02" />
    
    <!-- The default scaling to be added for the body parts the robot can see -->
    <param name="self_see_default_scale" type="double" value="1.0" />

    <!-- if someone asks for a stable map, publish the static map on the dynamic
    map topic and no longer publish dynamic maps -->
    <param name="publish_static_over_dynamic_map" type="bool" value="true" />

    <!-- we do not want a separate map with occlusions alone -->
    <param name="publish_occlusion" type="bool" value="true" />

    <!--param name="fixed_frame" type="string" value="/map" /-->	
    <param name="fixed_frame" type="string" value="/base_link" />

	<!--param name="sensor_frame" type="string" value="/tof_link" /-->

    <!-- define a box of size 2x2x2.5 around (0, 0, 0) in the robot frame -->
    <param name="robot_frame" type="string" value="/base_link" />

    <param name="origin_x" type="double" value="-0.135" />
    <param name="origin_y" type="double" value="-0.035" />
    <param name="origin_z" type="double" value="0.9" />
    
    <param name="dimension_x" type="double" value="2.0" />
    <param name="dimension_y" type="double" value="1.5" />
    <param name="dimension_z" type="double" value="2.5" />

    <!-- set the resolution (3.0 cm) -->
    <param name="resolution" type="double" value="0.03" />
    
    <!-- cloud sources -->
    <rosparam command="load" file="$(find lwa_arm_navigation)/config/collision_map_sources.yaml" />	
  </node>
  
</launch>
